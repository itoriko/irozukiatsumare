<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>投稿内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to (post.user) do %>
          <%= image_tag post.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to post.title, post, class: "post_#{post.id}" %></td>
        <td><%= post.content %></td>
        <td id="favorite_btn_<%= post.id %>">
          <%= render "public/favorites/btn", post: post %>
        </td>
        <td>
          <%= render "public/comments/counter", post: post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>