<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <div class="mx-auto w-50 bg-light text-center">
        <h3>プロフィール編集</h3>
      </div>

      <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
      <table class="mx-auto">
        <tbody>
          <tr>
            <td><%= f.label :image, "画像を設定" %></td>
            <td><%= f.file_field :profile_image, accept: "image/*"%></td>
          </tr>

          <tr>
            <td><%= f.label :user_name, "ユーザーネーム" %></td>
            <td><%= f.text_field :user_name %></td>
          </tr>

          <tr>
            <td><%= f.label :user_name_kana, "ユーザーネームフリガナ" %></td>
            <td><%= f.text_field :user_name_kana %></td>
          </tr>

          <tr>
            <td><%= f.label :occupation, "職業" %></td>
            <td><%= f.text_field :occupation %></td>
          </tr>

          <tr>
            <td><%= f.label :introduction, "自己紹介" %></td>
            <td><%= f.text_area :introduction %></td>
          </tr>

          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email %></td>
          </tr>

          <tr>
            <td><%= f.label :password, "パスワード（6文字以上）" %></td>
            <td><%= f.password_field :password %></td>
          </tr>

         </tbody>
      </table>

      <div class="d-flex justify-content-center" >
        <div class="p-2">
          <%= f.submit'編集内容を保存', class: "btn btn-success" %>
        </div>
        <div class="p-2">
          <%= link_to "退会する",unsubscribe_users_path,class: "btn btn-danger" %>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>