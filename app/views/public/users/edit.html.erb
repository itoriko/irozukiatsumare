<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <div class="mx-auto w-50 bg-light text-center">
        <p>登録情報編集</p>
      </div>

      <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
      <table class="mx-auto">
        <tbody>
          <tr>
            <td>ユーザーネーム</td>
            <td><%= f.text_field :user_name %></td>
          </tr>

          <tr>
            <td>ユーザーネームフリガナ</td>
            <td><%= f.text_field :user_name_kana %></td>
          </tr>

          <tr>
            <td>職業</td>
            <td><%= f.text_field :occupation %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email %></td>
          </tr>

          <tr>
            <td> <%= f.submit'編集内容を保存', class: "btn btn-sm btn-success" %>
            <td> <%= link_to "退会する",unsubscribe_users_path,class: "btn btn-sm btn-danger" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>

    </div>
  </div>
</div>