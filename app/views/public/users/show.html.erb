<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <div class="mx-auto w-50 text-center">
        <h3>プロフィール情報</h3>
      </div>

      <table class="mx-auto">
        <tbody>

          <tr>
            <td class="p-2" >プロフィール画像</td>
            <td><%= image_tag @user.get_profile_image, size: '100x100' %></td>
          </tr>

          <tr>
            <td class="p-2" >ユーザーネーム</td>
            <td><%= @user.user_name %></td>
          </tr>

          <tr>
            <td class="p-2" >ユーザーネームフリガナ</td>
            <td><%= @user.user_name_kana %></td>
          </tr>

          <tr>
            <td class="p-2" >職業</td>
            <td><%= @user.occupation %></td>
          </tr>

          <tr>
            <td class="p-2" >自己紹介</td>
            <td><%= @user.introduction %></td>
          </tr>

        </tbody>
      </table>

      <div class="p-2 d-flex justify-content-center" >
        <% if (not @user.guest_user?) && current_user.id == @user.id %>
          <%= link_to "編集する", edit_user_path(@user), class: "btn btn-primary edit_user_#{@user.id}" %>
        <% end %>
      </div>

    </div>
  </div>
</div>