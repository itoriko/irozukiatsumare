<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <div class="mx-auto w-50 bg-light text-center">
        <p>プロフィール情報</p>
      </div>

      <table class="mx-auto">
        <tbody>

          <tr>
            <td>プロフィール画像</td>
            <td><%= image_tag @user.get_profile_image, size: '100x100' %></td>
          </tr>

          <tr>
            <td>ユーザーネーム</td>
            <td><%= @user.user_name %></td>
          </tr>

          <tr>
            <td>ユーザーネームフリガナ</td>
            <td><%= @user.user_name_kana %></td>
          </tr>

          <tr>
            <td>職業</td>
            <td><%= @user.occupation %></td>
          </tr>

          <tr>
            <td>自己紹介</td>
            <td><%= @user.introduction %></td>
          </tr>

          <tr>
            <td></td>
            <td>
              <% if (not @user.guest_user?) && current_user.id == @user.id %>
                <%= link_to "編集する", edit_user_path(@user), class: "btn btn-primary btn-block edit_user_#{@user.id}" %>
              <% end %>
            </td>
          </tr>

        </tbody>
      </table>

    </div>
  </div>
</div>