<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <div class="mx-auto w-50 bg-light text-center">
        <p>新規会員登録</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <table class="mx-auto">
        <tbody>
          <tr>
            <td><%= f.label :user_name, "ユーザーネーム" %></td>
            <td><%= f.text_field :user_name %></td>
          </tr>

          <tr>
            <td><%= f.label :user_name_kana, "ユーザーネームフリガナ" %></td>
            <td><%= f.text_field :user_name_kana %></td>
          </tr>

          <tr>
            <td><%= f.label :occupation, "職業" %></td>
            <td><%= f.text_field :occupation %></td>
          </tr>

          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>

          <tr>
            <td><%= f.label :password, "パスワード（6文字以上）" %></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td><%= f.label :password_confirmation, "パスワード（確認用）" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td></td>
            <td class="text-center">
              <div class="mx-auto p-2">
                <%= f.submit "新規登録" ,class: "btn btn-success" %>
              </div>
            </td>
          </tr>
        </tbody>
      <% end %>
      </table>

      <div class="mx-auto w-50 bg-light text-center">
        <p>すでに登録済みの方</br>
      </div>
      <div class="mx-auto text-center">
        <%= link_to 'こちら',new_user_session_path %>からログインしてください。
      </div>
    </div>
  </div>
</div>
