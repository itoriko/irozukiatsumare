<div class="container">
  <div class="mx-auto w-50 bg-light text-center">
    <h3>管理者ログイン</h3>
  </div>

  <table class="mx-auto">
    <tbody>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <tr>
        <td><%= f.label :email, "メールアドレス" %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td><%= f.label :password, "パスワード（6文字以上）" %></td>
        <td><%= f.password_field :password, autocomplete: "current-password" %></td>
      </tr>
    </tbody>
  </table>

  <div class="p-2 d-flex justify-content-center" >
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
  <% end %>

  <%= render "admin/shared/links" %>
</div>
