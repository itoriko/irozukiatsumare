<div class= "container" >
  <div class= "mx-auto w-50 bg-light text-center" >
  <p>ユーザー一覧</p>
  </div>

  <table class= "w-100">
    <thead>
      <tr>
        <th>ユーザーID</th>
        <th>ユーザーネーム</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |users| %>
      <tr>
        <td><%= users.id %></td>
        <td>
          <%= link_to admin_user_path(users.id) do %>
          <%= users.user_name %>
          <% end %>
        </td>
        <td><%= users.email %></td>
        <td>
          <% if users.is_active %>
            <p class="text-success"><strong>有効</strong></p>
          <% else %>
            <p class="text-danger"><strong>退会</strong></p>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center" >
  <%= paginate @users %>
  </div>
</div>