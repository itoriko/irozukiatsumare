<div class= "container" >
  <div class= "mx-auto w-50 text-center" >
    <h3>色彩実装編集</h3>
  </div>

  <%= form_with model: @color, url: admin_color_path(@color.id), method: :patch, local: true do |f| %>
  <table class="d-flex justify-content-center">
    <tbody>
      <tr>
        <td class="p-2" ><%= f.label :name, "色彩名" %></td>
        <td><%= f.text_field :name, id:'inputName', placeholder: '色彩名' %></td>
      </tr>

      <tr>
        <td class="p-2" ><%= f.label :color_image, "色彩画像" %></td>
        <td><%= f.file_field :color_image, accept: "image/*"%></td>
      </tr>
    </tbody>
  </table>

  <div class="d-flex justify-content-center" >
    <div class="p-2">
      <%= f.submit'編集内容を保存', class: "btn btn-success" %>
    </div>
    <div class="p-2">
      <%= link_to "編集内容を削除", admin_color_path(@color.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </div>
  </div>
  <% end %>

  </div>
</div>