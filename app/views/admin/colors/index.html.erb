<div class= "container" >
  <div class= "mx-auto w-50 text-center" >
    <h3>色彩実装一覧</h3>
  </div>

  <div class="row my-3 justify-content-center">
    <div class="col-lg-6">
      <%= form_with model: @color, url: admin_colors_path do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :color_image, "背景画像を設定" %></td>
              <td><%= f.file_field :color_image, accept: "image/*"%></td>
            </tr>
            <tr>
              <td><%= f.label :name, "色彩名", class:'mr-5' %></td>
              <td><%= f.text_field :name, placeholder: '色彩名' %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "新規登録", class: 'btn btn-success ml-5' %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>

  <div class="row my-3 justify-content-center">
    <div class="col-lg-6">
      <table class="table">
        <thead>
          <tr>
            <th class="text-center">色彩名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @colors.each do |color| %>
          <tr>
            <td width="50%">
              <div class="color_box">
                <%= image_tag color.get_color_image, class: 'box_image' %>
                <p><%= color.name %></p>
              </div>
            </td>
            <td class="d-flex justify-content-center">
              <%= link_to '編集する', edit_admin_color_path(color), class: 'btn btn-success' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="d-flex justify-content-center" >
    <%= paginate @colors %>
  </div>
</div>