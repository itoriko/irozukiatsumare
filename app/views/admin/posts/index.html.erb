<div class="container">
  <div class= "mx-auto w-50 text-center" >
    <h3>投稿一覧</h3>
  </div>

  <table class= "w-100">
    <thead>
      <tr>
        <th>投稿ID</th>
        <th>色彩グループ</th>
        <th>投稿画像</th>
        <th>タイトル</th>
        <th>投稿内容</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td>
          <%= link_to admin_post_path(post.id) do %>
          <%= post.color.name %>
          <% end %>
        </td>
        <td><%= image_tag post.get_image, size:"100x100", class: "my-2" %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @posts %>
</div>