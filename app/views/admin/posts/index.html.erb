<div class="container">
  <div class= "mx-auto w-50 bg-light text-center" >
    <p>投稿一覧</p>
  </div>

  <table class= "w-100">
    <thead>
      <tr>
        <th>投稿ID</th>
        <th>色彩グループ</th>
        <th>タイトル</th>
        <th>投稿内容</th>
      </tr>
    </thead>
    <tbody>
      <% Post.all.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td>
          <%= link_to admin_post_path(post.id) do %>
          <%= post.color.name %>
          <% end %>
        </td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>