<div class="container">
  <div class="d-flex justify-content-center bg-light">
    <h3>新規投稿</h3>
  </div>

  <div class="col-md-6 offset-md-3">
  <%= form_with model: @post, url: admin_posts_path, method: :post do |f| %>
    <table class="table">
      <tr>
        <th style="border:none;"><%= f.label :image, "画像" %></th>
        <td style="border:none;"><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <th style="border:none;"><%= f.label :title, "タイトル" %></th>
        <td style="border:none;"><%= f.text_field :title, class: 'form-control post_title' %></td>
      </tr>
      <tr>
        <th style="border:none;"><%= f.label :content, "投稿内容" %></th>
        <td style="border:none;"><%= f.text_field :content, class: 'form-control post_content' %></td>
      </tr>

    </table>
    <div class="col d-flex justify-content-center">
      <%= f.submit '投稿する', class:"btn btn-success center" %>
    </div>
  </div>
  <% end %>
</div>