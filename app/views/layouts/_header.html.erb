<header>
  <nav class="navbar navbar-expand-lg bg-light navbar-light">
    <div class="container">
      <% if user_signed_in? %>
        <%= link_to "色好き集まれ", users_path, class: "navbar-brand text-black" %>
      <% elsif admin_signed_in? %>
        <%= link_to "色好き集まれ", admin_users_path, class: "navbar-brand text-black" %>
      <% else %>
        <%= link_to "色好き集まれ", root_path, class: "navbar-brand text-black" %>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>

          <li>
            <%= link_to user_path(current_user),class: 'nav-link' do %>
              <i class="fas fa-home"></i> マイページ
            <% end %>
          </li>

          <li>
            <%=  link_to users_path,class: 'nav-link' do %>
              <i class="fas fa-users"></i> ユーザー一覧
            <% end %>
          </li>

          <li>
            <%=  link_to posts_path ,class: 'nav-link' do %>
              <i class="fa-solid fa-comment"></i> 投稿一覧
            <% end %>
          </li>

          <li>
            <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        <% else %>

          <li>
            <%= link_to new_user_registration_path,class: 'nav-link' do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>

          <li>
            <%= link_to new_user_session_path ,class: 'nav-link' do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>

        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>