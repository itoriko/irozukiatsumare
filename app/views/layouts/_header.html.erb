<header>
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container top-nav">
      <% if user_signed_in? %>
        <%= link_to users_path, class: "logo_design" do %>
          <%= image_tag("logo_design.png", class: "w-100" ) %>
        <% end %>
      <% elsif admin_signed_in? %>
        <%= link_to admin_users_path, class: "logo_design" do %>
          <%= image_tag("logo_design.png", class: "w-100" ) %>
        <% end %>
      <% else %>
        <%= link_to root_path, class: "logo_design" do %>
          <%= image_tag("logo_design.png", class: "w-100" ) %>
        <% end %>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user), class: 'nav-link' do %>
              <i class="fa-solid fa-user-gear"></i> マイページ
            <% end %>
          </li>
          <li>
            <%=  link_to users_path, class: 'nav-link' do %>
              <i class="fas fa-users"></i> ユーザー一覧
            <% end %>
          </li>
          <li>
            <%=  link_to posts_path, class: 'nav-link' do %>
              <i class="fa-solid fa-comments"></i> 投稿一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        <% elsif admin_signed_in? %>
          <li>
            <%= link_to admin_root_path, class: 'nav-link' do %>
              <i class="fas fa-home"></i> トップページ
            <% end %>
          </li>
          <li>
            <%=  link_to admin_users_path, class: 'nav-link' do %>
              <i class="fas fa-users"></i> ユーザー一覧
            <% end %>
          </li>
          <li>
            <%=  link_to admin_posts_path, class: 'nav-link' do %>
              <i class="fa-solid fa-comments"></i> 投稿一覧
            <% end %>
          </li>
          <li>
            <%=  link_to admin_colors_path, class: 'nav-link' do %>
              <i class="fa-solid fa-fill-drip"></i> 色彩実装一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to new_user_registration_path, class: 'nav-link' do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class: 'nav-link' do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>